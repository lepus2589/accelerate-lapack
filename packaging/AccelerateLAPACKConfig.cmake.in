@PACKAGE_INIT@

cmake_minimum_required(VERSION @CMAKE_MINIMUM_REQUIRED_VERSION@...@CMAKE_MAXIMUM_SUPPORTED_VERSION@)

include(CMakeFindDependencyMacro)

set(BLA_VENDOR "Apple")
find_dependency(LAPACK MODULE)

set(ACCELERATE_NEW_LAPACK_VERSION "@ACCELERATE_NEW_LAPACK_VERSION@")

set(BLAS32_LINKER_FLAGS "-Wl,-alias_list,@PACKAGE_AccelerateLAPACK_INSTALL_CMAKEDIR@/new-lapack.alias")
set(LAPACK32_LINKER_FLAGS "-Wl,-alias_list,@PACKAGE_AccelerateLAPACK_INSTALL_CMAKEDIR@/new-lapack.alias")

if (BUILD_INDEX64)
    list(APPEND BLAS_LINKER_FLAGS "-Wl,-alias_list,@PACKAGE_AccelerateLAPACK_INSTALL_CMAKEDIR@/new-lapack-ilp64.alias")
    list(APPEND LAPACK_LINKER_FLAGS "-Wl,-alias_list,@PACKAGE_AccelerateLAPACK_INSTALL_CMAKEDIR@/new-lapack-ilp64.alias")
else ()
    list(APPEND BLAS_LINKER_FLAGS "-Wl,-alias_list,@PACKAGE_AccelerateLAPACK_INSTALL_CMAKEDIR@/new-lapack.alias")
    list(APPEND LAPACK_LINKER_FLAGS "-Wl,-alias_list,@PACKAGE_AccelerateLAPACK_INSTALL_CMAKEDIR@/new-lapack.alias")
endif ()

set_target_properties(BLAS::BLAS PROPERTIES INTERFACE_LINK_OPTIONS "${BLAS_LINKER_FLAGS}")
set_target_properties(LAPACK::LAPACK PROPERTIES INTERFACE_LINK_OPTIONS "${LAPACK_LINKER_FLAGS}")

check_required_components(AccelerateLAPACK)
